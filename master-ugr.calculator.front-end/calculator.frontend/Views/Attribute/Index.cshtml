@{
    ViewBag.Title = "Attribute";
}

<h2>Attribute Calculator</h2>

@using (Html.BeginForm())
{
<div>
    <label for="number">Enter Number:</label>
    <input type="text" id="number" name="number" />
</div>
<div>
    <input type="submit" value="Attribute" id="attribute" />
</div>
}

@if (ViewBag.ErrorMessage != null)
{
<div id="error" style="color: red;">
    <h4>@ViewBag.ErrorMessage</h4>
</div>
}
else if (ViewBag.IsPrime != null && ViewBag.IsOdd != null && ViewBag.SquareRoot != null)
{
<div>
    <h3>Is Prime:</h3><div id="isPrime"><h4>@ViewBag.IsPrime</h4></div>
    <h3>Is Odd:</h3><div id="isOdd"><h4>@ViewBag.IsOdd</h4></div>
    <h3>Square Root:</h3><div id="squareRoot"><h4>@ViewBag.SquareRoot</h4></div>
</div>
}
